<div class="jumbotron background-image-banner d-flex align-items-start">
  <div class="col-lg-3 col-md-6 card-user">
    <div class="d-flex justify-content-center">
      <%= image_tag("png-clipart-apple-icon-format-icon-person-outline-white-monochrome.png", :class => "img-avatar") %>
    </div>
    <p>First Name: <%=@user.first_name%></p>
    <p>Last Name: <%=@user.last_name%></p>
    <p>City: <%=@user.city%></p>
    <p>Zip Code: <%=@user.zipcode%></p>
    <%if current_user == @user%>
      <p>E-mail: <%=@user.email%></p>
      <%=link_to "Edit Profile", edit_user_registration_path%>
    <%end%>
  </div>

  <div class="col-lg-7 margin-top-15vh">
    <% @user.itineraries.each do |i| %>
      <div class="row">
        <div class="col-lg-12 card-user mb-3">
          <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12 m-2 row d-flex justify-content-center">
              <%= i.title %>
              <%= image_tag("ajaccio.jpeg", :class => "img-destination") %>
              <% if i.start_date %>
                Date : <%= i.start_date %>
              <% else %>
                Date : <%= Date.today %>
              <% end %>
            </div>
            <% if i.destinations.any? %>
              <div class="col-lg-4 col-md-4 col-sm-12 m-3 row d-flex align-items-center justify-content-center">
                <p class="mt-4"><%= i.destinations[0].city %></p>
                <h3>‚ü±</h3>
                <p><%= i.destinations[-1].city %></p>
              </div>
              <div class="col-lg-1 col-md-1 col-sm-12 m-3 d-flex justify-content-center align-items-center">
                <p>Etapes: <%= i.destinations.length - 2 %></p>
              </div>
            <%else%>
              <p class="mt-4">No destinations yet</p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
