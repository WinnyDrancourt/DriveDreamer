<div class="field">
    <%= f.label :Titre %><br />
    <%= f.text_field :title %>
  </div>

<%= f.fields_for :destinations do |fd| %>
  <%= render partial: 'destination_fields', locals: { f: fd } %>
</div>
<% end %>

<% unless f.object.destinations_limit_reached? %>
  <% if params[:dynamic_form] == '1' %>
    <%= link_to_add_nested(f, :destinations, '#nested_destinations', partial_form_variable: :f) %>
  <% else %>
    <%= button_tag 'Add destination', type: 'submit', name: 'commit', value: 'add_destination' %>
  <% end %>
<% end %>

