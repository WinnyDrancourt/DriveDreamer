<body>
<main>
  <div class="row">
    <div class="col-12 col-lg-3 col-md-3 col-sm-12">
        <div class="background-green scrollable-container-new-iti d-flex justify-content-center pt-2" id="form-container-iti">
              <%= form_for @itinerary, html: {class: 'itinerary_form_with_destinations'} do |f| %>
              <%= render partial: 'form_fields_with_variable_destinations', locals: { f: f} %>
        </div>
        <div class="align-self-end">

          <%= f.submit "Create itinerary", class: "background-sand border-0 position-itinerary-button" %>
          <% end %>
        </div>
    </div>
    <div class="col-md-9 col-12 col-lg-9 col-sm-12" >
      <!-- Interactive Map -->
      <div id='map' class="map-size"></div>
      <%= javascript_include_tag 'map' %>
    </div>
  </div>

</main>
</body>
