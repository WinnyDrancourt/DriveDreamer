<%= form_with do |f| %>
  <div class="field">
    <%= f.label :Titre %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Depart %><br />
    <%= f.text_field :destination %>
  </div>

  <div class="field">
    <%= f.label :Arrivée %>
    <%= f.text_field :destination %>
  </div>

  <div id="duplicate-1" class="duplid">
    <div class="field ">
      <%= f.label :Etapes %><br />
      <%= f.text_field :destination %>
    </div>

    <div class="field">
      <%= f.label :Note %><br />
      <%= f.text_field :notes %>
    </div>

    <div class="field">
      <%= f.label :Duree %><br />
      <%= f.number_field :stay_time, in: 1..31, step: 1 %>
    </div>
  </div>
  <button id="bt-duplicate">+</button>

  <div class="field">
    <%= f.label :Date %><br />
    <%= f.date_field :start_date %>
  </div>

   <div class="field">
    <%= f.label :Date %><br />
    <%= f.date_field :end_date %>
  </div>
 
  <div class="actions">
    <%= f.submit "Créer" %>
  </div>
<% end %>




<!-- Interactive Map -->
<div id='map' style='width: 25vh; height: 25vh;'></div>
<%= javascript_include_tag 'map' %>
<!-- End Interactive Map -->
<%= javascript_include_tag 'duplicate' %>
