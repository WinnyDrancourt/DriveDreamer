<html>
  <body>
    <main>
      <div class="jumbotron background-image-jumbotron d-flex align-items-center justify-content-center">
            <div class="background-green mb-5 p-1 d-flex flex-row rounded">
            <div class="bg-white m-2 p-2 rounded">Lieu de départ</div>
            <div class="bg-white m-2 p-2 rounded">Lieu d'arrivée</div>
            <div class="m-2 p-2">GO!</div>
            </div>
      </div>

      <div class="album py-5">
        <div class="container">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <%@itineraries.each do |i|%>
            <div class="col-3">
              <div class="card background-green shadow-sm">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                  <p class="card-text"><%= i.title %></p>
                  <img src="assets/img-van" class="img-card" alt="Van Image">
                  <div class="d'flex justify-content-center">
                  <% if i.destinations[0] %>
                    <span><%= i.destinations[0].city %></span> 
                <% end %>
                <span class="h6">➲</span>
                <% if i.destinations[-1] %>
                  <span><%= i.destinations[-1].city %></span> 
              <% end %>
              </div>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button class="button-card">
                        <div class="text">
                          <span><%=link_to "GO !", itinerary_path(i), class: "text-dark text-decoration-none"%></span>
                        </div>
                        <div class="clone">
                          <span><%=link_to "GO !", itinerary_path(i), class: "text-dark text-decoration-none"%></span>
                        </div>
                        <svg stroke-width="2" stroke="currentColor" viewBox="0 0 24 24" fill="none" class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" width="20px">
                          <path d="M14 5l7 7m0 0l-7 7m7-7H3" stroke-linejoin="round" stroke-linecap="round"></path>
                        </svg>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <%end%>
          </div>
        </div>
    </div>
</main>
</body>
</html>
