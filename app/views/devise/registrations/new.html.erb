<div class="d-flex justify-content-center mt-5">
  <div class="d-flex card card-form mt-5 background-green col-md-4 offset-md-3 col-sm-10 offset-sm-1 col-12 align-items-center ms-0">
    <p class="form-title">Sign up account</p>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages" , resource: resource %>

      <div class="d-flex my-2 justify-content-between">
        <div class="field me-2">
          <%= f.text_field :first_name, autofocus: true, class: "form-control text-center", placeholder: "First Name" %>
        </div>

        <div class="field">
          <%= f.text_field :last_name, autofocus: true, class: "form-control text-center", placeholder: "Last Name"  %>
        </div>
      </div>

      <div class="field my-2">
        <%= f.email_field :email, autocomplete: "email", autofocus: true, class: "form-control text-center", placeholder: "Email"  %>
      </div>

      <div class="field my-2">
        <%= f.password_field :password, autocomplete: "new-password", autofocus: true, class: "form-control text-center", placeholder: "Password (#{@minimum_password_length} characters minimum)"  %>
      </div>

      <div class="field my-2">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", autofocus: true, class: "form-control text-center", placeholder: "Password Confirmation"  %>
      </div>

      <div class="d-flex my-2 justify-content-between">
        <div class="field">
          <%= f.text_field :city, autofocus: true, class: "form-control text-center", placeholder: "City" %>
        </div>

        <div class="field">
          <%= f.text_field :zipcode, autofocus: true, class: "form-control text-center", placeholder: "Zipcode" %>
        </div>
      </div>

      <div class="actions d-flex justify-content-center">
        <%= f.submit "Sign up", class: "button-primary" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>

